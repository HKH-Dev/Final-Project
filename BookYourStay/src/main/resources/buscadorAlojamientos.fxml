<HBox alignment="CENTER" prefHeight="1000.0" prefWidth="1100.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.reservasapp.plataforma.controlador.BuscadorAlojamientosControlador">
    <VBox alignment="TOP_CENTER" spacing="20.0">
        <Label text="Agendar Reservación" textFill="#0f0f0f">
            <font><Font size="20.0" /></font>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </Label>
        <GridPane alignment="TOP_CENTER" hgap="20.0" prefHeight="447.0" prefWidth="414.0" vgap="40.0">
            <Label text="Ciudad Hospedaje:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <ComboBox fx:id="cbCiudadSeleccionado" prefHeight="30.0" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Información de Reserva:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextArea fx:id="txtInfoReserva" editable="false" prefHeight="100.0" prefWidth="250.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Días a Reservar:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="dpDiasReservar" prefHeight="30.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Número de Huéspedes:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtNumeroHuespedes" prefHeight="30.0" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Button mnemonicParsing="false" onAction="#cargarAlojamientosFiltrados" text="Buscar" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </VBox>
    <VBox fx:id="vboxAlojamientos" alignment="TOP_CENTER" prefHeight="1000.0" prefWidth="593.0">
        <Label text="Detalles del Alojamiento" VBox.vgrow="ALWAYS">
            <font><Font size="16.0" /></font>
            <VBox.margin>
                <Insets bottom="20.0" top="20.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </Label>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
      <FlowPane prefHeight="229.0" prefWidth="593.0">
         <children>
            <TextArea prefHeight="200.0" prefWidth="200.0" />
            <ListView prefHeight="200.0" prefWidth="393.0" />
            <ToolBar prefHeight="40.0" prefWidth="200.0">
               <items>
                <Button mnemonicParsing="false" text="Button" />
               </items>
            </ToolBar>
         </children>
      </FlowPane>
        <!-- Accommodation items will be added here dynamically -->
    </VBox>
</HBox>
