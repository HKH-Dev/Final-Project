<HBox spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.reservasapp.plataforma.controlador.AccommodationItemController">

    <!-- Accommodation Details Section -->
    <VBox prefWidth="250.0" spacing="10.0">
        <Label fx:id="lblNombreAlojamiento" style="-fx-font-size: 16px;" text="Accommodation Name" />
        <Label fx:id="lblUbicacion" style="-fx-font-size: 13;" text="Location" textAlignment="CENTER" />
        <Text fx:id="txtDescripcion" style="-fx-font-size: 13;" text="Description of the accommodation" wrappingWidth="250.0" />
    </VBox>

    <!-- Image and Navigation Section -->
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="269.0" spacing="10.0">
      <AnchorPane prefHeight="200.0" prefWidth="265.0">
         <children>
               <ImageView fx:id="imgCarousel" fitHeight="200.0" fitWidth="300.0" />
               <HBox alignment="CENTER" spacing="10.0" />
                <Button layoutY="92.0" onAction="#showPreviousImage" text="&lt;" />
                <Button layoutX="274.0" layoutY="92.0" onAction="#showNextImage" text="&gt;" />
         </children>
         <VBox.margin>
            <Insets right="5.0" />
         </VBox.margin>
      </AnchorPane>
    </VBox>
</HBox>
