<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.reservasapp.plataforma.controlador.AccommodationItemController">
    <!-- Accommodation Details Section -->
    <VBox spacing="10.0">
        <Label fx:id="lblNombreAlojamiento" text="Accommodation Name" />
        <Label fx:id="lblUbicacion" text="Location" />
        <Text fx:id="txtDescripcion" wrappingWidth="200.0" text="Description of the accommodation" />
    </VBox>
    <VBox alignment="CENTER" spacing="10.0">
        <ImageView fx:id="imgCarousel" fitWidth="200.0" fitHeight="150.0" />
        <HBox alignment="CENTER" spacing="5.0">
            <Button text="&lt;&lt; Previous" onAction="#showPreviousImage" />
            <Button text="Next &gt;&gt;" onAction="#showNextImage" />
        </HBox>
    </VBox>
</HBox>